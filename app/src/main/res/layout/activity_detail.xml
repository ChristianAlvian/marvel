<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context=".Activity.MainActivity">


    <ImageView
        android:id="@+id/iv_foto"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/coba"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_below="@id/iv_foto"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_nama_asli_pemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama asli pemain"
        android:layout_below="@id/tv_nama"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_film_yang_dimainkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film yang dimainkan"
        android:layout_below="@id/tv_nama_asli_pemain"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sejarah"
        android:layout_below="@id/tv_film_yang_dimainkan"
        android:justificationMode="inter_word"
        android:paddingTop="10dp"
        />
</RelativeLayout>