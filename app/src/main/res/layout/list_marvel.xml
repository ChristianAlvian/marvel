<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="32dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/coba"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_toRightOf="@id/iv_foto"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_nama_asli_pemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama asli pemain"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/iv_foto"
            android:layout_below="@id/tv_nama"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_film_yang_dimainkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_asli_pemain"
            android:layout_toRightOf="@+id/iv_foto"
            android:paddingLeft="5dp"
            android:text="Film yang dimainkan"
            />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_below="@id/iv_foto"
            >
            <Button
                android:id="@+id/btn_ubah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                />

            <Button
                android:id="@+id/btn_hapus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                />

            <Button
                android:id="@+id/btn_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>